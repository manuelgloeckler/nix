#!/usr/bin/env sh

# Basic yabai config inspired by FelixKratz workflows

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_animation_duration    0.0
yabai -m config window_placement             second_child
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on
yabai -m config layout                       bsp
yabai -m config top_padding                  6
yabai -m config bottom_padding               6
yabai -m config left_padding                 6
yabai -m config right_padding                6
yabai -m config window_gap                   6

# no external bar reserved at top

# macOS behaviors (deprecated border/topmost options removed)
# Note: borders are provided by FelixKratz/borders; yabai border options were removed upstream.

# rules
# float utilities / special windows (add more as needed)
yabai -m rule --add app='^System Settings$' manage=off
yabai -m rule --add app='^App Store$' manage=off
yabai -m rule --add app='^Calculator$' manage=off


# signals (re-balance on space change)
yabai -m signal --add event=space_changed action='yabai -m space --balance'

exit 0
