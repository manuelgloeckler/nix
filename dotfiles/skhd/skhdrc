#!/usr/bin/env sh

# Modifiers
alt    = alt
alt_s  = alt + shift
alt_c  = alt + ctrl

# Focus windows
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Move windows
alt_s - h : yabai -m window --swap west
alt_s - j : yabai -m window --swap south
alt_s - k : yabai -m window --swap north
alt_s - l : yabai -m window --swap east

# Resize windows
alt_c - h : yabai -m window --resize left:-40:0;  yabai -m window --resize right:-40:0
alt_c - j : yabai -m window --resize bottom:40:0; yabai -m window --resize top:40:0
alt_c - k : yabai -m window --resize top:-40:0;   yabai -m window --resize bottom:-40:0
alt_c - l : yabai -m window --resize right:40:0;  yabai -m window --resize left:40:0

# Balance space
alt - b : yabai -m space --balance

# Toggle float / fullscreen
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
alt - f : yabai -m window --toggle zoom-fullscreen

# Rotate, mirror
alt - r : yabai -m space --rotate 90
alt - m : yabai -m space --mirror y-axis

# Move window to next/prev display
alt - n : yabai -m window --display next; yabai -m display --focus next
alt - p : yabai -m window --display prev; yabai -m display --focus prev

# Space navigation (1..9)
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# Move window to space (with shift)
alt_s - 1 : yabai -m window --space 1; yabai -m space --focus 1
alt_s - 2 : yabai -m window --space 2; yabai -m space --focus 2
alt_s - 3 : yabai -m window --space 3; yabai -m space --focus 3
alt_s - 4 : yabai -m window --space 4; yabai -m space --focus 4
alt_s - 5 : yabai -m window --space 5; yabai -m space --focus 5
alt_s - 6 : yabai -m window --space 6; yabai -m space --focus 6
alt_s - 7 : yabai -m window --space 7; yabai -m space --focus 7
alt_s - 8 : yabai -m window --space 8; yabai -m space --focus 8
alt_s - 9 : yabai -m window --space 9; yabai -m space --focus 9

