#!/usr/bin/env sh
# Minimal SketchyBar config: slim black bar to match the notch

# Bar appearance
sketchybar --bar \
  height=26 \
  position=top \
  color=0xff000000 \
  corner_radius=0 \
  padding_left=8 \
  padding_right=8

# Optional: disable blur for a solid black look
sketchybar --default blur_radius=0

# You can add items here later (e.g., spaces, clock, battery)

